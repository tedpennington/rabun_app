<div class="rabun-table-div">
  <h2>Renters</h2>
  <p>All known renters in our system are shown below.  Search any field by typing in the search box above.</p>
  <div id="renter-table-div">
  <div class="row">
    <h6 class="col-12">Click on any renter to see their profile and reviews.</h6>
  </div>
  <div class="row justify-content-end">
    <%= link_to '+ Add a Renter', new_renter_path, id: "new-renter-button", class: "btn btn-primary" %><br>
  </div>
  <br>
  <table class="table table-hover">
    <thead class="thead">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Aka</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Mobile phone</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @renters.order(:last_name).each do |renter| %>
        <tr data-link="<%= renter_path(renter) %>">
          <td><%= link_to renter.first_name, renter %></td>
          <td><%= link_to renter.last_name, renter  %></td>
          <td><%= link_to renter.aka, renter  %></td>
          <td><%= link_to renter.email, renter  %></td>
          <td><%= link_to renter.phone_number, renter  %></td>
          <td><%= link_to renter.mobile_phone, renter  %></td>
          <!--<td><%= link_to 'Show', renter, class: "btn btn-primary" %></td>-->
          <!-- <td><%#= link_to 'Edit', edit_renter_path(renter), class: "btn btn-link" %></td> -->
          <!-- <td><%#= link_to 'Destroy', renter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<br>


