        <%# end %>

        <%= link_to  "Write a Review", new_renter_review_path(@renter), class: "btn btn-primary"%>
  </div>
  <div class="col-md-9">
      <% if @reviews.blank? %>
        <h3>No reviews yet.</h3>
      <% else %>
        <% @reviews.each do |review| %>
          <p><%= "Overall Rating: #{review.rating_overall}" %></p>
          <p><%= review.comment %></p>
          <p>HERE</p>
          <p><em><%= "by #{review.user.first_name.capitalize} #{review.user.last_name.capitalize}." %></em></p>
          <p><%= "Created on #{review.created_at.strftime("%-m/%-d/%y")}" %></p>
          <% if review.user_id == current_user.id %>
            <%= link_to 'Edit', edit_renter_review_path(@renter, review), class: "btn btn-warning" %>
            <%= link_to 'Destroy', renter_review_path(@renter, review), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
          <br><br>
        <% end %>
      <% end %>
  </div>
