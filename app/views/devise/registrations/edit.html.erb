<div class="rabun-table-div">
<!-- <h2>Edit your <%= resource_name.to_s.humanize %> profile</h2> -->
<h2>Edit Your Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :first_name, class: "col-8 col-form-label" %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control col-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :last_name, class: "col-8 col-form-label" %><br />
    <%= f.text_field :last_name, class: "form-control col-3" %>
  </div>
  
  <div class="form-group row">
    <%= f.label :email, class: "col-8 col-form-label" %><br />
    <%= f.email_field :email, class: "form-control col-3" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <div class="col-8">
      <%= f.label :password, class: "col-form-label" %> 
      <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
      <i>(leave blank if you don't want to change it)</i><br />
    </div>
    <%= f.password_field :password, autocomplete: "off", class: "form-control col-3" %>
    
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-8 col-form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-3" %>
  </div>

  <div class="form-group row">
    <div class="col-8">
      <%= f.label :current_password, class: "col-form-label" %> 
      <i>(we need your current password to confirm your changes)</i><br />
    </div>
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control col-3" %>
  </div>
  <div class="row">
    <div class="col-8"></div>
    <div class="actions col-4">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Back", :back %>

</div>
